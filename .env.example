# Database (Supabase PostgreSQL)
# Get this from your Supabase project settings > Database > Connection pooling
# Connection pooling URL (recommended for serverless)
DATABASE_URL="postgresql://postgres.supabase.com:6543/postgres"

# Direct connection (optional, used for migrations if needed)
# Get this from Connection string > URI (without ?pgbouncer=true)
DIRECT_URL="postgresql://postgres:a@a.supabase.co:5432/postgres"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Setup Secret (for /setup page)
# Generate a random secret: openssl rand -base64 32
SETUP_SECRET="your-setup-secret-change-this"

# App
APP_NAME="AI CMS"
APP_URL="http://localhost:3000"

# S3-Compatible Storage (Required for media uploads)
# Works with: AWS S3, Cloudflare R2, DigitalOcean Spaces, Backblaze B2, MinIO, etc.
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET_NAME="your-bucket-name"
S3_REGION="auto"  # For AWS S3: us-east-1, eu-west-1, etc. For Cloudflare R2: auto

# Optional: Custom S3 endpoint (required for non-AWS providers)
# Cloudflare R2: https://your-account-id.r2.cloudflarestorage.com
# DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
# Backblaze B2: https://s3.us-west-000.backblazeb2.com
# MinIO: http://localhost:9000
# S3_ENDPOINT=""

# Optional: Custom public URL for accessing files (useful for CDN)
# If not set, will use default S3 URL structure
# S3_PUBLIC_URL="https://cdn.yourdomain.com"

# Optional: Force path-style URLs (required for MinIO and some providers)
# S3_FORCE_PATH_STYLE="true"

# File Upload Configuration (Optional)
# MAX_FILE_SIZE=10485760  # 10MB in bytes
