# Database (Supabase PostgreSQL)
# Get this from your Supabase project settings > Database > Connection pooling
# Connection pooling URL (recommended for serverless)
DATABASE_URL="postgresql://postgres.supabase.com:6543/postgres"

# Direct connection (optional, used for migrations if needed)
# Get this from Connection string > URI (without ?pgbouncer=true)
DIRECT_URL="postgresql://postgres:a@a.supabase.co:5432/postgres"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Setup Secret (for /setup page)
# Generate a random secret: openssl rand -base64 32
SETUP_SECRET="your-setup-secret-change-this"

# App
APP_NAME="AI CMS"
APP_URL="http://localhost:3000"

# ==============================================================================
# STORAGE CONFIGURATION (Choose ONE option below)
# ==============================================================================

# Option 1: Supabase Storage (Recommended if using Supabase for database)
# Free tier: 1GB storage + 2GB bandwidth/month
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
# SUPABASE_STORAGE_BUCKET="cms-media"

# Option 2: S3-Compatible Storage (AWS S3, Cloudflare R2, DigitalOcean Spaces, etc.)
# Uncomment the lines below if using S3-compatible storage:
# S3_ACCESS_KEY_ID="your-access-key"
# S3_SECRET_ACCESS_KEY="your-secret-key"
# S3_BUCKET_NAME="your-bucket-name"
# S3_REGION="auto"  # For AWS S3: us-east-1, eu-west-1, etc. For Cloudflare R2: auto

# Optional S3 settings:
# S3_ENDPOINT=""  # Required for non-AWS: Cloudflare R2, DigitalOcean Spaces, MinIO, etc.
# S3_PUBLIC_URL=""  # Custom CDN URL if using one
# S3_FORCE_PATH_STYLE="true"  # Required for MinIO and some providers

# File Upload Configuration (Optional)
# MAX_FILE_SIZE=10485760  # 10MB in bytes
