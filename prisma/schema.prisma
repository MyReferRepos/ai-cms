// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  VIEWER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          Role      @default(VIEWER)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts            Post[]
  media            Media[]
  comments         Comment[]
  facebookAccounts FacebookAccount[]

  @@map("users")
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String
  excerpt     String?
  coverImage  String?
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  tags          PostTag[]
  comments      Comment[]
  facebookPosts FacebookPost[]

  @@index([authorId])
  @@index([categoryId])
  @@index([slug])
  @@index([status])
  @@map("posts")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts       Post[]

  @@map("categories")
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())

  posts     PostTag[]

  @@map("tags")
}

model PostTag {
  postId String
  tagId  String

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@map("post_tags")
}

model Media {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  thumbnailUrl String?
  mediumUrl    String?
  alt          String?
  width        Int?
  height       Int?
  createdAt    DateTime @default(now())

  uploadedById String
  uploadedBy   User   @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([uploadedById])
  @@index([mimeType])
  @@map("media")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}

enum FacebookPostStatus {
  PENDING
  PUBLISHED
  FAILED
  DELETED
}

model FacebookAccount {
  id              String   @id @default(cuid())
  userId          String
  pageId          String   @unique
  pageName        String
  pageAccessToken String   // Encrypted token
  tokenExpiresAt  DateTime?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  facebookPosts   FacebookPost[]

  @@index([userId])
  @@index([pageId])
  @@map("facebook_accounts")
}

model FacebookPost {
  id                 String             @id @default(cuid())
  postId             String?
  facebookAccountId  String
  facebookPostId     String?            // Facebook's post ID
  status             FacebookPostStatus @default(PENDING)
  message            String
  link               String?
  imageUrl           String?
  publishedAt        DateTime?
  scheduledAt        DateTime?
  likes              Int?
  shares             Int?
  comments           Int?
  reach              Int?
  errorMessage       String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  post               Post?              @relation(fields: [postId], references: [id], onDelete: SetNull)
  facebookAccount    FacebookAccount    @relation(fields: [facebookAccountId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([facebookAccountId])
  @@index([status])
  @@index([facebookPostId])
  @@map("facebook_posts")
}
