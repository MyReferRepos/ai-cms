// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  VIEWER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          Role      @default(VIEWER)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts            Post[]
  media            Media[]
  comments         Comment[]
  facebookAccounts FacebookAccount[]
  facebookGroups   FacebookGroup[]
  facebookPosts    FacebookPost[]

  @@map("users")
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String
  excerpt     String?
  coverImage  String?
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  tags          PostTag[]
  comments      Comment[]
  facebookPosts FacebookPost[]

  @@index([authorId])
  @@index([categoryId])
  @@index([slug])
  @@index([status])
  @@map("posts")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts       Post[]

  @@map("categories")
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())

  posts     PostTag[]

  @@map("tags")
}

model PostTag {
  postId String
  tagId  String

  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@map("post_tags")
}

model Media {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  thumbnailUrl String?
  mediumUrl    String?
  alt          String?
  width        Int?
  height       Int?
  createdAt    DateTime @default(now())

  uploadedById String
  uploadedBy   User   @relation(fields: [uploadedById], references: [id], onDelete: Cascade)

  @@index([uploadedById])
  @@index([mimeType])
  @@map("media")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // For registered users
  authorId  String?
  author    User?    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // For anonymous users (guest comments)
  guestName  String?
  guestEmail String?

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  // For nested replies
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

enum FacebookPostStatus {
  PENDING
  PUBLISHED
  FAILED
  DELETED
}

model FacebookAccount {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  pageId          String   @unique @map("page_id")
  pageName        String   @map("page_name")
  pageAccessToken String   @map("page_access_token")  // Encrypted token
  tokenExpiresAt  DateTime? @map("token_expires_at")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  facebookPosts   FacebookPost[]
  bestTimes       FacebookBestTime[]

  @@index([userId])
  @@index([pageId])
  @@map("facebook_accounts")
}

model FacebookPost {
  id                 String             @id @default(cuid())
  postId             String?            @map("post_id")
  facebookAccountId  String?            @map("facebook_account_id")
  facebookGroupId    String?            @map("facebook_group_id")
  facebookPostId     String?            @map("facebook_post_id")  // Facebook's post ID
  status             FacebookPostStatus @default(PENDING)
  message            String
  link               String?
  imageUrl           String?            @map("image_url")
  publishedAt        DateTime?          @map("published_at")
  scheduledAt        DateTime?          @map("scheduled_at")
  likes              Int?               @map("likes_count")
  shares             Int?               @map("shares_count")
  comments           Int?               @map("comments_count")
  reach              Int?
  errorMessage       String?            @map("error_message")
  userId             String             @map("user_id")
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  post               Post?              @relation(fields: [postId], references: [id], onDelete: SetNull)
  facebookAccount    FacebookAccount?   @relation(fields: [facebookAccountId], references: [id], onDelete: Cascade)
  facebookGroup      FacebookGroup?     @relation(fields: [facebookGroupId], references: [id], onDelete: Cascade)
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([facebookAccountId])
  @@index([facebookGroupId])
  @@index([userId])
  @@index([status])
  @@index([facebookPostId])
  @@map("facebook_posts")
}

model FacebookGroup {
  id                 String   @id @default(cuid())
  userId             String   @map("user_id")
  groupId            String   @unique @map("group_id")
  groupName          String   @map("group_name")
  groupDescription   String?  @map("group_description")
  memberCount        Int?     @map("member_count")
  privacy            String?  // PUBLIC, CLOSED, SECRET
  userAccessToken    String   @map("user_access_token")  // Encrypted token
  tokenExpiresAt     DateTime? @map("token_expires_at")
  isActive           Boolean  @default(true) @map("is_active")
  lastPostAt         DateTime? @map("last_post_at")  // Last time user posted to this group
  lastPostCheckedAt  DateTime? @map("last_post_checked_at")  // Last time we checked for posts
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  user               User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  facebookPosts      FacebookPost[]

  @@index([userId])
  @@index([groupId])
  @@index([lastPostAt])
  @@map("facebook_groups")
}

model FacebookBestTime {
  id                String   @id @default(cuid())
  facebookAccountId String   @map("facebook_account_id")
  dayOfWeek         Int      @map("day_of_week")  // 0-6 (Sunday to Saturday)
  hour              Int      // 0-23
  score             Float    // Engagement score (0-100)
  avgEngagement     Float    @map("avg_engagement")  // Average engagement rate
  avgReach          Int      @map("avg_reach")  // Average reach
  sampleSize        Int      @map("sample_size")  // Number of posts analyzed
  lastAnalyzedAt    DateTime @map("last_analyzed_at")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  facebookAccount   FacebookAccount @relation(fields: [facebookAccountId], references: [id], onDelete: Cascade)

  @@unique([facebookAccountId, dayOfWeek, hour])
  @@index([facebookAccountId])
  @@index([score])
  @@map("facebook_best_times")
}
